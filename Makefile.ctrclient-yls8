ifeq ($(strip $(CTRCLIENT)),)
$(error "The CTRCLIENT Makefile param is required, this should be: <localdir for neimod/ctr repo>/ctr/ramtracer/ctrclient")
endif

LIBS = 
OBJS = ctrclient-yls8.o $(CTRCLIENT)/ctrclient.o 
CXXFLAGS = -Wall -Os -I. -I$(CTRCLIENT)
CFLAGS = $(CXXFLAGS)
OUTPUT = ctrclient-yls8
CC = gcc 

ifneq ($(strip $(NIX)),)
	CFLAGS	:=	$(CFLAGS) -DNIX
endif

ifneq ($(strip $(WIN32)),)
	CFLAGS	:=	$(CFLAGS) -DWIN32
	LIBS	:=	$(LIBS) -lws2_32
endif

main: $(OBJS)
	$(CC) -o $(OUTPUT) $(LIBS) $(OBJS)
clean:
	rm -rf $(OUTPUT) $(OBJS)
